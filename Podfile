    pod 'Nocilla'
    pod 'Quick', '~> 0.3.0'
    pod 'Nimble', '~> 1.0.0'
end

target "Dopamine OSX Tests", :exclusive => true do
    pod 'Nocilla'
    pod 'Quick', '~> 0.3.0'
    pod 'Nimble', '~> 1.0.0'
end